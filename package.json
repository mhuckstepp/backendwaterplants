{
  "name": "water-my-plants",
  "version": "1.0.0",
  "scripts": {
    "start": "node index.js",
    "tsc": "tsc",
    "postinstall": "npm run tsc",
    "dev": "ts-node-dev --respawn --pretty --transpile-only index.ts",
    "server": "nodemon index.ts",
    "rollback": "knex migrate:rollback",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "rollbackh": "heroku run knex migrate:rollback -a mywaterplants",
    "migrateh": "heroku run knex migrate:latest -a mywaterplants",
    "databaseh": "heroku pg:psql -a mywaterplants",
    "seedh": "heroku run knex seed:run -a mywaterplants",
    "test": "cross-env NODE_ENV=testing jest --watchAll --verbose --runInBand",
    "deploy": "git push heroku main"
  },
  "engines": {
    "node": "14.16.0",
    "npm": "6.14.11"
  },
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^7.4.5",
    "typescript": "^4.3.5",
    "bcrypt": "^5.0.1",
    "cors": "=2.8.5",
    "dotenv": "=8.2.0",
    "express": "=4.17.1",
    "helmet": "=4.4.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "=0.95.3",
    "knex-cleaner": "=1.3.1",
    "pg": "=8.5.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/jest": "=26.0.22",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/node": "^16.4.10",
    "@types/pg": "^8.6.1",
    "@typescript-eslint/parser": "^4.28.5",
    "cross-env": "=7.0.3",
    "eslint": "=7.22.0",
    "jest": "=26.6.3",
    "nodemon": "=2.0.7",
    "supertest": "=6.1.3",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.8"
  }
}
